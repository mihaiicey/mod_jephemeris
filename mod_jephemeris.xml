	<config>
		<fields name="params">
		 <fieldset name="basic">
			<field name="alignment" type="radio" default="0" label="MOD_JEPHEMERIS_ALIGNMENT" description="MOD_JEPHEMERIS_ALIGNMENT_DESC">
	  			<option value="0">MOD_JEPHEMERIS_LEFT</option>
	 			<option value="1">MOD_JEPHEMERIS_RIGHT</option>
			</field>
			<field name="sun_zodiac" type="radio" default="0" label="MOD_JEPHEMERIS_SUN_SIGN" description="MOD_JEPHEMERIS_SUNSIGN_DESC">
